<Window x:Class="InfractionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"     
        xmlns:local="clr-namespace:InfractionApp"                 
        xmlns:sys="clr-namespace:System;assembly=mscorlib"           
        xmlns:core="clr-namespace:InfractionApp.Core"       
        mc:Ignorable="d"
        
        Title="InfractionApp" Height="720" Width="1280" Background="{DynamicResource ResourceKey=ClientAreaWindowColor}"
        Topmost="False" WindowState="Normal">

    <!-- Window.DataContext -->
    <Window.DataContext>
        <core:RollAdvDis/> <!-- <RollAdvDis -->
    </Window.DataContext>

    <!-- Window.Resources -->
    <Window.Resources>
        <sys:String x:Key="strTestString">Testing Window Resources</sys:String>

        <!-- Standard Border setup -->
        <Style TargetType="{x:Type Border}" x:Key="DynamicFieldBorder">

            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource BorderLightColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderMediumColor}"/>
        </Style>

        <!-- Standard Canvas setup -->
        <Style TargetType="{x:Type Canvas}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Height" Value="229"/>
            <Setter Property="Width" Value="304"/>
            <Setter Property="Background" Value="#e2e2e2"/>
        </Style>

        <!-- ComboBox Styles. -->
        <Style TargetType="ComboBox" x:Key="ComboBoxStyle">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Background" Value="{StaticResource ControlLightColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDarkColor}"/>
            <Setter Property="Foreground" Value="{StaticResource MostTextColorSwatches}"/>
            <Setter Property="Margin" Value="3 3 23 3"/>
            <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="MinHeight" Value="23"/>
            <Setter Property="MinWidth" Value="128"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="AllowDrop" Value="True"/>
        </Style>

        <!-- CheckBox Styles. -->
        <Style TargetType="CheckBox" x:Key="CheckBoxStyle">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Background" Value="{StaticResource ControlLightColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDarkColor}"/>
            <Setter Property="Foreground" Value="{StaticResource MostTextColorSwatches}"/>
            <Setter Property="Height" Value="13"/>
            <Setter Property="Width" Value="13"/>
        </Style>

        <!-- ScrollBar Styles. -->
        <Style TargetType="ScrollBar" x:Key="ScrollBarStyle">
            <Setter Property="Margin" Value="10 5 10 5"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Background" Value="{StaticResource PressedScrollbarThumbColor}"/>
            <Setter Property="Minimum" Value="1"/>
            <Setter Property="Maximum" Value="240"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Width" Value="725"/>
            <Setter Property="Value" Value="51"/>
        </Style>

    </Window.Resources>
    <!-- END Window.Resources -->



